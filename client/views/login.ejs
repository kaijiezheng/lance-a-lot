<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Lance-a-lot</title>
    <link rel="stylesheet" href="lib/semantic/dist/semantic.css">
    <link rel="stylesheet" href="styles/styles.css">
    <!-- dependencies -->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="lib/underscore/underscore.js"></script>
    <script src="lib/backbone/backbone.js"></script>
    <script src="lib/handlebars/handlebars.js"></script>
    <script src="lib/d3/d3.js"></script>
    <script src="lib/semantic/dist/semantic.js"></script>
  </head>

  <body>
    <div id="login" class="ui two column middle aligned piled segment grid">    
      <div class="column">
        <form class="ui form" action="/login" method="post">
            <div class="field">
              <label for="email">Email:</label>
              <input class="ui medium input" id="email" type="text" name="email" placeholder="freelancer@lancealot.com">
            </div>
            <div class="field">
              <br>
              <label for="password">Password:</label>
              <input class="ui medium input"id="password" type="password" name="password" placeholder="password">
            </div>
            <div>
              <br>
              <input class="ui fluid large blue submit button" type="submit" value="Login">
            </div>
            <div class="inline field"></div>
        </form>

        
      </div>    
       
        <div class="ui vertical divider">OR</div>

      <div class="center aligned column">
        <div>
          <h2 class="ui green header">
            Need help organizing?
          </h2>
        </div>
        <br>
        <br>
        <div class="ui green labeled icon button">
          <i class="edit icon"></i>
          <a href="/signup">Sign up for a new account &rarr;</a>
        </div>
      </div>
  </div>

    <script>
    // Form Validation
    $('.ui.form')
      .form({
        fields: {
          email: {
            rules: [{
              type: 'empty',
              prompt: 'Please enter your email address'
            }]
          },
          password: {
            rules: [{
                type   : 'empty',
                prompt : 'Please enter a password'
              }]
          }
        },
        inline: true,
        keyboardShortcuts: true
      });
    </script>
  </body>
</html>
